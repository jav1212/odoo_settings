<odoo>
    <data>

        <record model="ir.ui.view" id="gestion.directorios_list">
            <field name="name">gestion directorio list</field>
            <field name="model">gestion.directorio</field>
            <field name="arch" type="xml">
                <tree create="true" edit='false' delete="false" import="false" export_xlsx="false" sample="1" multi_edit="1">
                    <field name="name" />
                    <field name="descripcion" />
                    <field name="documentos" />
                </tree>
            </field>
        </record>

        <!--    TODO: ES NECESARIO QUE SE TENGA EN CUENTA LA LOGICA DE PROGRAMACION
                PARA AGREGARLOS A READONLY
         -->

        <record id="gestion.directorio_form" model="ir.ui.view">
            <field name="name">gestion directorio formulario</field>
            <field name="model">gestion.directorio</field>
            <field name="arch" type="xml">
                <form create='true' delete="false">

                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="descripcion"/>
                            <field name="documentos"/>
                        </group>
                    </sheet>

                </form>

            </field>
        </record>

        <record id="gestion.action_directorio_window" model="ir.actions.act_window">
            <field name="name">Gesti√≥n de directorios</field>
            <field name="res_model">gestion.directorio</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gestion.menu_1_directorios_list" name="Directorios" action="gestion.action_directorio_window" parent="gestion.menu_1"/>

    </data>
</odoo>