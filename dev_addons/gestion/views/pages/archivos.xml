<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="gestion.archivo_view_tree" model="ir.ui.view">
            <field name="name">gestion.archivo</field>
            <field name="model">gestion.archivo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="fileref" string='Archivo' filename="name" />
                </tree>
            </field>
        </record>
        <record id="gestion.archivo_view_form" model="ir.ui.view">
            <field name="name">gestion.archivo</field>
            <field name="model">gestion.archivo</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group >
                            <field name="name" invisible='1' />
                            <field name="fileref" string='Archivo' filename="name" widget='binary'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

</odoo>