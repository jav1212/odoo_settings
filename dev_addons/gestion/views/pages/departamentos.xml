<odoo>
    <data>

        <record model="ir.ui.view" id="gestion.departamentos_list">
            <field name="name">gestion departamento list</field>
            <field name="model">gestion.departamento</field>
            <field name="arch" type="xml">
                <tree create="true" edit='false' delete="false" import="false" export_xlsx="false" sample="1" multi_edit="1">
                    <field name="name" />
                    <field name="descripcion" />
                </tree>
            </field>
        </record>

        <!--    TODO: ES NECESARIO QUE SE TENGA EN CUENTA LA LOGICA DE PROGRAMACION
                PARA AGREGARLOS A READONLY
         -->

        <record id="gestion.departamento_form" model="ir.ui.view">
            <field name="name">gestion departamento formulario</field>
            <field name="model">gestion.departamento</field>
            <field name="arch" type="xml">
                <form create='true' delete="false">
                    <header>
                        <button string="Editar departamento" class="oe_highlight"/>
                        <button string="Eliminar departamento" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="descripcion"/>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="gestion.action_departamento_window" model="ir.actions.act_window">
            <field name="name">Gesti√≥n de departamentos</field>
            <field name="res_model">gestion.departamento</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gestion.menu_1_departamentos_list" name="Departamentos" action="gestion.action_departamento_window" parent="gestion.menu_1"/>
    </data>
</odoo>
