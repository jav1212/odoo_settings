<odoo>
    <data>

        <record model="ir.ui.view" id="gestion.solicitud_list">
            <field name="name">Gestion solicitud list</field>
            <field name="model">gestion.solicitud</field>
            <field name="arch" type="xml">
                <tree create="true" edit='false' delete="false" import="false" export_xlsx="false" sample="1" multi_edit="1">
                    <field name="fecha_emision"/>
                </tree>
            </field>
        </record>

        <record id="gestion.solicitud_form" model="ir.ui.view">
            <field name="name">Gestion solicitud formulario</field>
            <field name="model">gestion.solicitud</field>
            <field name="arch" type="xml">
                <form create='false' delete="false">
                    <sheet>
                        <group>
                            <field name="fecha_emision"/>
                            <field name="descripcion" />
                            <field name="fileref" filename="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="gestion.action_solicitud_window" model="ir.actions.act_window">
            <field name="name">Gesti√≥n de solicitud</field>
            <field name="res_model">gestion.solicitud</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gestion.menu_1_solicitud_list" name="Solicitudes" action="gestion.action_solicitud_window" parent="gestion.menu_1"/>


    </data>

</odoo>