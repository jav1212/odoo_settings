<odoo>
    <data>

        <record model="ir.ui.view" id="gestion.documentos_list">
            <field name="name">gestion documentos list</field>
            <field name="model">gestion.documento</field>
            <field name="arch" type="xml">
                <tree create="true" edit='false' delete="false" import="false" export_xlsx="false" sample="1" multi_edit="1">
                    <field name="name"/>
                    <field name="directorio"/>
                </tree>
            </field>
        </record>

        <!--    TODO: ES NECESARIO QUE SE TENGA EN CUENTA LA LOGICA DE PROGRAMACION
                PARA AGREGARLOS A READONLY
         -->

        <record id="gestion.documento_form" model="ir.ui.view">
            <field name="name">Gestion documento formulario</field>
            <field name="model">gestion.documento</field>
            <field name="arch" type="xml">
                <form create='false' delete="false">
                    <sheet>
                        <group>
                            <field name="is_editable" invisible="1"/>
                            <field name="name" />
                            <field name="descripcion" />
                            <field name="directorio" />
                            <field name="fileref" filename="name" />
                            <field name="solicitud"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="gestion.action_documento_window" model="ir.actions.act_window">
            <field name="name">Gesti√≥n de documentos</field>
            <field name="res_model">gestion.documento</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gestion.menu_1_documentos_list" name="Documentos" action="gestion.action_documento_window" parent="gestion.menu_1"/>

    </data>
</odoo>